// ~/.config/Code/User/settings.json
{
  // breadcrumbs
  "breadcrumbs.enabled": false,
  // editor
  "editor.autoIndent": "full",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.colorDecorators": true,
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 12,
  "editor.detectIndentation": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "IntelOne Mono",
  "editor.fontSize": 16,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.insertSpaces": true,
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.parameterHints.enabled": false,
  "editor.renderLineHighlight": "gutter",
  "editor.renderWhitespace": "trailing",
  "editor.rulers": [80, 120],
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.linkedEditing": true,
  // diffEditor
  "diffEditor.ignoreTrimWhitespace": false,
  // window
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "compact",
  // workbench
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.enablePreview": false,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.excludeDirty": true,
  "workbench.editor.limit.value": 15,
  "workbench.localHistory.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.colorTheme": "Adwaita Dark",
  //files
  "files.associations": {
    ".sequelizerc": "javascript",
    "*.css": "tailwindcss",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "files.hotExit": "off",
  //explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // terminal
  "terminal.external.linuxExec": "kgx",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "/usr/bin/zsh"
    }
  },
  // security
  "security.workspace.trust.untrustedFiles": "open",
  //git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",
  // extensions
  "extensions.ignoreRecommendations": true,
  // eslint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "astro",
    "svelte",
    "vue"
  ],
  // liveServer
  "liveServer.settings.CustomBrowser": "chrome",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.mount": [
    ["/lib", "./lib"],
    ["/src", "./src"]
  ],
  // intellicode
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // javascript
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "typescript.tsserver.log": "off",
  // python
  "python.languageServer": "Default",
  "python.analysis.typeCheckingMode": "basic",
  "python.formatting.provider": "black",
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  // html
  "html.suggest.html5": true,
  "html.autoClosingTags": true,
  "html.validate.scripts": true,
  "html.validate.styles": true,
  // css
  "css.validate": true,
  "css.lint.important": "warning",
  "css.lint.float": "warning",
  "css.lint.ieHack": "warning",
  "css.lint.zeroUnits": "warning",
  "css.lint.duplicateProperties": "warning",
  // scss
  "scss.validate": true,
  "scss.lint.important": "warning",
  "scss.lint.float": "warning",
  "scss.lint.ieHack": "warning",
  "scss.lint.zeroUnits": "warning",
  "scss.lint.duplicateProperties": "warning",
  // solargraph
  "solargraph.useBundler": true,
  "solargraph.diagnostics": true,
  "solargraph.completion": true,
  "solargraph.definitions": true,
  "solargraph.references": true,
  "solargraph.rename": true,
  "solargraph.symbols": true,
  "solargraph.hover": true,
  "solargraph.formatting": true,
  "solargraph.folding": true,
  // java
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m -javaagent:\"/home/leonardo/.vscode/extensions/gabrielbb.vscode-lombok-1.0.1/server/lombok.jar\"",
  // git blame
  "gitblame.ignoreWhitespace": true,
  // error lens
  "errorLens.excludeBySource": [
    "ts(2698)",
    "eslint(@typescript-eslint/prefer-nullish-coalescing)",
    "eslint(@typescript-eslint/strict-boolean-expressions)",
    "css(unknownAtRules)",
    "rubocop(Rails/OutputSafety)"
  ],
  // prettier
  "prettier.documentSelectors": ["**/*.astro"],
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svg]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // svelte
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "svelte.enable-ts-plugin": true,
  // copilot
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  // vim
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.sneak": true,
  "vim.sneakUseIgnorecaseAndSmartcase": true,
  "vim.smartRelativeLine": true,
  "vim.smartcase": true,
  "vim.useCtrlKeys": false,
  "workbench.iconTheme": "material-icon-theme"
}
