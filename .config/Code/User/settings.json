// ~/.config/Code/User/settings.json
{
  // editor
  "editor.fontSize": 16,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.rulers": [
    80,
    120
  ],
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.autoIndent": "full",
  "editor.renderLineHighlight": "gutter",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.parameterHints.enabled": false,
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.colorDecorators": true,
  "editor.renderWhitespace": "trailing",
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorBlinking": "phase",
  // workbench
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.activityBar.visible": true,
  "workbench.colorCustomizations": {
    "statusBar.background": "#6d47a6",
  },
  "workbench.editor.labelFormat": "short",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "workbench.colorTheme": "Dracula At Night",
  //files
  "files.associations": {
    ".sequelizerc": "javascript",
    "**/templates/*.html": "django-html",
    "**/templates/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "files.hotExit": "off",
  //explorer
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  // terminal
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "/usr/bin/zsh",
      "color": "terminal.ansiCyan",
      "args": [
        "--login"
      ],
      "overrideName": true,
      "icon": "terminal-bash"
    },
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  //git
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  // emmet
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  // extensions
  "extensions.ignoreRecommendations": true,
  // eslint
  "eslint.packageManager": "yarn",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // liveServer
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.CustomBrowser": "chrome",
  "liveServer.settings.mount": [
    [
      "/lib",
      "./lib"
    ],
    [
      "/src",
      "./src"
    ]
  ],
  // intellicode
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // javascript
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "typescript.tsserver.log": "off",
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  // python
  "python.languageServer": "Default",
  // html
  "html.suggest.html5": true,
  "html.autoClosingTags": true,
  "html.validate.scripts": true,
  "html.validate.styles": true,
  // css
  "css.validate": true,
  "css.lint.important": "warning",
  "css.lint.float": "warning",
  "css.lint.ieHack": "warning",
  "css.lint.zeroUnits": "warning",
  "css.lint.duplicateProperties": "warning",
  // scss
  "scss.validate": true,
  "scss.lint.important": "warning",
  "scss.lint.float": "warning",
  "scss.lint.ieHack": "warning",
  "scss.lint.zeroUnits": "warning",
  "scss.lint.duplicateProperties": "warning",
  // solargraph
  "solargraph.useBundler": true,
  "solargraph.diagnostics": true,
  "solargraph.completion": true,
  "solargraph.definitions": true,
  "solargraph.references": true,
  "solargraph.rename": true,
  "solargraph.symbols": true,
  "solargraph.hover": true,
  "solargraph.formatting": true,
  "solargraph.folding": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "redhat.telemetry.enabled": true,
  "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m -javaagent:\"/home/leonardo/.vscode/extensions/gabrielbb.vscode-lombok-1.0.1/server/lombok.jar\"",
}