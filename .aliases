alias g="git"
alias c="clear"
alias q="exit 0"
alias copy="xclip -sel clip <"
alias out="shutdown now"
alias windows="sudo bootctl set-oneshot auto-windows && reboot"

# substitutions
alias cat="bat"
alias vim="nvim"
alias code="code-oss"

# directories
alias dev="cd ~/Projetos"
alias cd..="cd .."
alias cd...="cd ../.."
alias cd....="cd ../../.."

# colors
alias ls="ls --color=auto"
alias grep="grep --color=auto"

# confirm before overwriting
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

